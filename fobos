[tests-intel-debug]
template  = template-static-intel-debug
build_dir = ./exe/

#templates
[template-shared-gnu]
compiler        = gnu
cflags          = $CSHARED_GNU $OPTIMIZE
lflags          = $LSHARED $OPTIMIZE
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = True
jobs            = 2
cflags_heritage = True

[template-static-gnu]
compiler        = gnu
cflags          = $CSTATIC_GNU $OPTIMIZE
lflags          = $OPTIMIZE
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = True
jobs            = 2
cflags_heritage = True

[template-shared-gnu-debug]
compiler        = gnu
cflags          = $CSHARED_GNU $DEBUG_GNU
lflags          = $LSHARED $DEBUG_GNU
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = True
jobs            = 2
cflags_heritage = True

[template-static-gnu-debug]
compiler        = gnu
